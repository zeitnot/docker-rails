<% if @form.success %>
  id = '#poll-item-<%=@form.poll.id%>'
  response = "<%= j (render template: 'polls/_poll_stat', locals: { poll: @form.poll, stats: Poll.stats }) %>"
  $(id).html(response)
  $(id + ' .poll-options').show()
<% else %>
  id = '#response-<%=@form.poll.id%>'
  response = '<%=@form.errors.full_messages.join(' ')%>'
  $(id).addClass('ajax-response-fail')
  $(id).text(response)
  $(id).show()
<% end%>